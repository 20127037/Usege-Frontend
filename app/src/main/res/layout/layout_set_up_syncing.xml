<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_backward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_backward_arrow"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set up your library preference"
            android:textColor="@color/heading"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group_library"
        android:checkedButton="@id/radio_button_automatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_automatic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Automatic when start the app"
            android:button="@drawable/custome_radio_button"
            android:padding="18dp"
            android:textColor="@color/lost_focus" />

        <RadioButton
            android:id="@+id/radio_button_manually"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pick manually"
            android:button="@drawable/custome_radio_button"
            android:padding="18dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_border_confirm"
            android:layout_gravity="center"
            android:paddingHorizontal="60dp" />

    </LinearLayout>
</LinearLayout>