<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/backward_from_combination_container_layout_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_backward_arrow"
        android:gravity="center"
        android:text="Choose your desired layout"
        android:textColor="@color/heading"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/combination_container_layout_2_items"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration_combination_container_layout_2_items"
            android:layout_marginRight="25dp"/>

        <ImageView
            android:id="@+id/combination_container_layout_3_items"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration_combination_container_layout_3_items"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/combination_container_layout_4_items"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration_combination_container_layout_4_items"
            android:layout_marginRight="25dp"/>

        <ImageView
            android:id="@+id/combination_container_layout_5_items"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration_combination_container_layout_5_items"/>
    </LinearLayout>


</LinearLayout>