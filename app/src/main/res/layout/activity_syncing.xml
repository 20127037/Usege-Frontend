<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".syncing.activities.SyncingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon" />

            <ImageView
                android:id="@+id/avatar_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:padding="10dp">

            <TextView
                android:id="@+id/library_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/title_library"
                android:textColor="@color/white"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/cloud_upload_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/library_title"
                android:src="@drawable/baseline_cloud_upload" />

            <ImageView
                android:id="@+id/picture_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/list_icon"
                android:src="@drawable/baseline_image" />

            <ImageView
                android:id="@+id/list_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_format_list_bulleted" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is a little bit empty"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtView_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's sync with your local data"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="80dp"/>
    </LinearLayout>

</ScrollView>